{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "esnext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "rootDirs": ["src", "__tests__"],
    "baseUrl": "src"
  },
  "include": ["src", "__tests__"],
  "exclude": []
}
